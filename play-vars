- name: play level variables
  hosts: local
  connection: local
  vars:
    COURSE: ansible
    DURATION: 10hrs
    TRINER: venky
  tasks:
  - name: print the course information
    ansible.builtin.debug:
    #vars should be closed with double quotes ("msg contednt")
      msg: "Hello {{ COURSE }}, course duration: {{ DURATION }}, triner is { TRINER }}"